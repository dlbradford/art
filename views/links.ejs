<%- include('layout', { 
  title: 'Links',
  page: 'links',
  body: `
    <h2 style="font-size: 26px; margin-bottom: 30px; padding-bottom: 15px; border-bottom: 2px solid #2a2a2a;">Useful Links</h2>
    
    <div class="admin-controls">
      <h3>Add New Link</h3>
      <form id="addLinkForm">
        <div class="form-group">
          <label for="linkTitle">Title</label>
          <input type="text" id="linkTitle" name="title" required>
        </div>
        <div class="form-group">
          <label for="linkUrl">URL</label>
          <input type="url" id="linkUrl" name="url" required placeholder="https://example.com">
        </div>
        <div class="form-group">
          <label for="linkDescription">Description</label>
          <input type="text" id="linkDescription" name="description">
        </div>
        <button type="submit">Add Link</button>
      </form>
    </div>

    <ul class="links-list" id="linksContainer">
      ${links && links.length > 0 ? 
        links.map(link => `
          <li data-id="${link.id}">
            <a href="${link.url}" target="_blank">${link.title}</a>
            ${link.description ? `<div class="link-description">${link.description}</div>` : ''}
          </li>
        `).join('') :
        '<li style="text-align: center; color: #4a4a4a; padding: 40px; border: none;">No links yet. Add some useful links above!</li>'
      }
    </ul>
  `
}) %>
