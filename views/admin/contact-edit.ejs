<!DOCTYPE html>
<html>
<head>
  <title>Edit Contact Page</title>
  <link rel="stylesheet" href="/style.css">
  <!-- Quill Editor -->
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
  <style>
    .ql-editor {
      min-height: 400px;
      font-size: 14px;
      line-height: 1.7;
    }
    .ql-container {
      font-family: inherit;
    }
  </style>
</head>
<body style="background: <%= settings.backgroundColor %>; color: <%= settings.textColor %>;">
  <div class="admin-bar">
    <span>✏️ Edit Contact Page</span>
    <div>
      <a href="/admin/dashboard">Dashboard</a>
      <a href="/contact">View Contact</a>
      <a href="/admin/logout">Logout</a>
    </div>
  </div>
  <div class="container" style="padding: 40px;">
    <h1 style="margin-bottom: 20px;">Edit Contact Page</h1>
    <p style="margin-bottom: 30px; color: var(--secondary-text);">
      Edit the contact page content below. Use the toolbar to format text, add headings, lists, and change font sizes. The contact form will remain below this content automatically.
    </p>
    
    <form id="contactForm">
      <div class="form-group">
        <div id="editor"><%= contact.fullContent %></div>
      </div>
      
      <div style="margin-top: 30px; display: flex; gap: 15px;">
        <button type="submit">Save Changes</button>
        <a href="/contact" class="btn" style="background: var(--secondary-text); text-decoration: none;">Cancel</a>
      </div>
    </form>
  </div>
  
  <script>
    // Initialize Quill editor
    var quill = new Quill('#editor', {
      theme: 'snow',
      modules: {
        toolbar: [
          [{ 'header': [2, 3, 4, false] }],
          [{ 'size': ['small', false, 'large', 'huge'] }],
          ['bold', 'italic', 'underline', 'strike'],
          [{ 'color': [] }, { 'background': [] }],
          [{ 'list': 'ordered'}, { 'list': 'bullet' }],
          [{ 'align': [] }],
          ['link'],
          ['clean']
        ]
      }
    });
  </script>
  <script src="/script.js"></script>
</body>
</html>
