<%- include('layout', { 
  title: 'Blog',
  page: 'blogroll',
  body: `
    <h2 style="font-size: 28px; margin-bottom: 30px; font-weight: 600;">Blog Posts</h2>
    
    ${posts && posts.length > 0 ? 
      posts.map(post => `
        <article class="post" style="background: ${settings.postBackground}; color: ${settings.textColor};">
          <div class="post-header">
            <h3 class="post-title" style="color: ${settings.textColor};">${post.title}</h3>
            <span class="post-date">${post.date}</span>
          </div>
          ${post.image && post.imagePosition === 'above' ? `
            <div style="margin-bottom: 20px;">
              <img src="/uploads/${post.image}" alt="${post.title}" style="max-width: 100%; height: auto; border-radius: 6px; box-shadow: var(--shadow);">
            </div>
          ` : ''}
          <div class="post-content">
            ${post.content}
          </div>
          ${post.image && post.imagePosition === 'below' ? `
            <div style="margin-top: 20px;">
              <img src="/uploads/${post.image}" alt="${post.title}" style="max-width: 100%; height: auto; border-radius: 6px; box-shadow: var(--shadow);">
            </div>
          ` : ''}
        </article>
      `).join('') :
      '<p style="text-align: center; padding: 40px;">No posts yet. Check back soon!</p>'
    }
  `
}) %>
