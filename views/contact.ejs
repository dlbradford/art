<%- include('layout', { 
  title: 'Contact',
  page: 'contact',
  body: `
    <div style="background: ${settings.postBackground}; padding: 30px; border-radius: 8px; border: 1px solid var(--border-color); box-shadow: var(--shadow); margin-bottom: 30px; color: ${settings.textColor};">
      ${contact.fullContent}
      
      ${isAdmin ? `
        <div style="margin-top: 30px; padding-top: 20px; border-top: 2px solid var(--border-color);">
          <a href="/admin/contact/edit" class="btn">Edit Contact Page</a>
        </div>
      ` : ''}
    </div>

    <div class="admin-controls">
      <h3>Send Me a Message</h3>
      <form id="contactForm">
        <div class="form-group">
          <label for="contactName">Your Name *</label>
          <input type="text" id="contactName" name="name" required>
        </div>
        <div class="form-group">
          <label for="contactEmail">Email Address *</label>
          <input type="email" id="contactEmail" name="email" required>
        </div>
        <div class="form-group">
          <label for="contactSubject">Subject *</label>
          <input type="text" id="contactSubject" name="subject" required>
        </div>
        <div class="form-group">
          <label for="contactMessage">Message *</label>
          <textarea id="contactMessage" name="message" required placeholder="Write your message here..."></textarea>
        </div>
        <button type="submit">Send Message</button>
      </form>
    </div>
  `
}) %>
