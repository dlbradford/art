<%- include('layout', { 
  title: 'Contact',
  page: 'contact',
  body: `
    <h2 style="font-size: 26px; margin-bottom: 30px; padding-bottom: 15px; border-bottom: 2px solid #2a2a2a;">Get In Touch</h2>
    
    <div style="margin-bottom: 40px; line-height: 1.8;">
      <p style="margin-bottom: 20px;">I'd love to hear from you! Whether you have questions about my work, want to discuss a potential commission, or just want to say hello, feel free to reach out.</p>
      
      <div style="margin: 30px 0; padding: 25px; background: #f8f8f8; border: 2px solid #2a2a2a;">
        <h3 style="font-size: 18px; margin-bottom: 15px; font-weight: bold;">Contact Information</h3>
        <p style="margin-bottom: 10px;"><strong>Email:</strong> donna@donna.com</p>
        <p style="margin-bottom: 10px;"><strong>Location:</strong> Connecticut, USA</p>
        <p style="margin-bottom: 10px;"><strong>Response Time:</strong> Usually within 2-3 business days</p>
      </div>
    </div>

    <div class="admin-controls">
      <h3>Send Me a Message</h3>
      <form id="contactForm">
        <div class="form-group">
          <label for="contactName">Your Name *</label>
          <input type="text" id="contactName" name="name" required>
        </div>
        <div class="form-group">
          <label for="contactEmail">Email Address *</label>
          <input type="email" id="contactEmail" name="email" required>
        </div>
        <div class="form-group">
          <label for="contactSubject">Subject *</label>
          <input type="text" id="contactSubject" name="subject" required>
        </div>
        <div class="form-group">
          <label for="contactMessage">Message *</label>
          <textarea id="contactMessage" name="message" required placeholder="Write your message here..."></textarea>
        </div>
        <button type="submit">Send Message</button>
      </form>
    </div>

    <div id="contactMessage" style="display: none; margin-top: 20px; padding: 20px; border: 2px solid #2a2a2a; background: #f0f8f0; text-align: center;"></div>

    <div style="margin-top: 50px; padding-top: 30px; border-top: 2px solid #2a2a2a;">
      <h3 style="font-size: 20px; margin-bottom: 20px; font-weight: bold;">Connect With Me</h3>
      <div style="display: flex; gap: 20px; flex-wrap: wrap;">
        <a href="#" style="padding: 12px 24px; border: 2px solid #2a2a2a; text-decoration: none; color: #1a1a1a; font-weight: bold; transition: all 0.2s;">Instagram</a>
        <a href="#" style="padding: 12px 24px; border: 2px solid #2a2a2a; text-decoration: none; color: #1a1a1a; font-weight: bold; transition: all 0.2s;">Twitter</a>
        <a href="#" style="padding: 12px 24px; border: 2px solid #2a2a2a; text-decoration: none; color: #1a1a1a; font-weight: bold; transition: all 0.2s;">LinkedIn</a>
      </div>
    </div>
  `
}) %>
