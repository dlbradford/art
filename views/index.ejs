<%- include('layout', { 
  title: 'Home',
  page: 'home',
  body: `
    <div class="carousel">
      <div class="carousel-inner">
        <div class="carousel-arrows left" onclick="prevSlide()">&#9664;</div>
        <div class="carousel-content">
          <h2 style="font-size: 28px; margin-bottom: 15px;">Welcome to My Art Portfolio</h2>
          <p style="font-size: 16px; color: #4a4a4a;">Exploring color, form, and expression through mixed media</p>
        </div>
        <div class="carousel-arrows right" onclick="nextSlide()">&#9654;</div>
      </div>
    </div>

    <h2 style="font-size: 26px; margin-bottom: 25px; padding-bottom: 15px; border-bottom: 2px solid #2a2a2a;">Recent Posts</h2>
    
    ${posts && posts.length > 0 ? 
      posts.map(post => `
        <article class="post">
          <div class="post-header">
            <h3 class="post-title">${post.title}</h3>
            <span class="post-date">${post.date}</span>
          </div>
          <div class="post-content">
            ${post.content}
          </div>
        </article>
      `).join('') + `
      <div style="text-align: center; margin-top: 30px;">
        <a href="/blogroll" class="btn">View All Posts</a>
      </div>
      ` : 
      '<p style="text-align: center; color: #4a4a4a; padding: 40px;">No posts yet. Check back soon!</p>'
    }
  `
}) %>
