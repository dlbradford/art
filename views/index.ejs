<%- include('layout', { 
  title: 'Home',
  page: 'home',
  body: `
    ${carouselImages && carouselImages.length > 0 ? `
      <div class="carousel" data-timer="${settings.carouselTimer || 5}" data-height="${settings.carouselHeight || 25}">
        <div class="carousel-slides">
          ${carouselImages.map((image, index) => `
            <div class="carousel-slide ${index === 0 ? 'active' : ''}" style="display: ${index === 0 ? 'block' : 'none'};">
              <img src="${image.filename.startsWith('http') ? image.filename : '/uploads/' + image.filename}" alt="${image.title}" class="carousel-image">
              <div style="text-align: center; margin-top: 15px;">
                <h3 style="font-size: 20px; margin-bottom: 8px; color: ${settings.textColor};">${image.title}</h3>
                ${image.description ? `<p style="font-size: 14px; color: ${settings.textColor}; opacity: 0.8;">${image.description}</p>` : ''}
              </div>
            </div>
          `).join('')}
        </div>
        <div class="carousel-controls">
          <button class="carousel-pause-btn" onclick="toggleCarouselPause()" aria-label="Pause carousel">
            <span class="pause-icon">⏸</span>
            <span class="play-icon" style="display: none;">▶</span>
          </button>
          <div class="carousel-dots">
            ${carouselImages.map((_, index) => `
              <span class="carousel-dot ${index === 0 ? 'active' : ''}" onclick="goToSlide(${index})"></span>
            `).join('')}
          </div>
        </div>
      </div>
    ` : `
      <div class="carousel">
        <div class="carousel-content">
          <h2 style="font-size: 28px; margin-bottom: 15px;">Welcome to My Art Portfolio</h2>
          <p style="font-size: 16px;">Exploring color, form, and expression through mixed media</p>
          <p style="font-size: 14px; margin-top: 10px; opacity: 0.7;">No carousel images selected. Visit the gallery management to add images to the carousel.</p>
        </div>
      </div>
    `}

    <h2 style="font-size: 28px; margin: 40px 0 25px; font-weight: 600;">Recent Posts</h2>
    
    ${posts && posts.length > 0 ? 
      posts.map(post => `
        <article class="post" style="background: ${settings.postBackground}; color: ${settings.textColor};">
          <div class="post-header">
            <h3 class="post-title" style="color: ${settings.textColor};">${post.title}</h3>
            <span class="post-date">${post.date}</span>
          </div>
          ${post.image && post.imagePosition === 'above' ? `
            <div style="margin-bottom: 20px;">
              <img src="/uploads/${post.image}" alt="${post.title}" style="max-width: 100%; height: auto; border-radius: 6px; box-shadow: var(--shadow);">
            </div>
          ` : ''}
          <div class="post-content">
            ${post.content}
          </div>
          ${post.image && post.imagePosition === 'below' ? `
            <div style="margin-top: 20px;">
              <img src="/uploads/${post.image}" alt="${post.title}" style="max-width: 100%; height: auto; border-radius: 6px; box-shadow: var(--shadow);">
            </div>
          ` : ''}
        </article>
      `).join('') + `
      <div style="text-align: center; margin-top: 30px;">
        <a href="/blogroll" class="btn">View All Posts</a>
      </div>
      ` : 
      '<p style="text-align: center; padding: 40px;">No posts yet. Check back soon!</p>'
    }
  `
}) %>
