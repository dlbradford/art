<%- include('layout', { 
  title: 'Home',
  page: 'home',
  body: `
    <div class="carousel">
      <div class="carousel-inner">
        <div class="carousel-arrows left" onclick="prevSlide()">&#9664;</div>
        <div class="carousel-content">
          <h2 style="font-size: 28px; margin-bottom: 15px;">Welcome to My Art Portfolio</h2>
          <p style="font-size: 16px;">Exploring color, form, and expression through mixed media</p>
        </div>
        <div class="carousel-arrows right" onclick="nextSlide()">&#9654;</div>
      </div>
    </div>

    <h2 style="font-size: 28px; margin-bottom: 25px; font-weight: 600;">Recent Posts</h2>
    
    ${posts && posts.length > 0 ? 
      posts.map(post => `
        <article class="post" style="background: ${settings.postBackground}; color: ${settings.textColor};">
          <div class="post-header">
            <h3 class="post-title" style="color: ${settings.textColor};">${post.title}</h3>
            <span class="post-date">${post.date}</span>
          </div>
          ${post.image && post.imagePosition === 'above' ? `
            <div style="margin-bottom: 20px;">
              <img src="/uploads/${post.image}" alt="${post.title}" style="max-width: 100%; height: auto; border-radius: 6px; box-shadow: var(--shadow);">
            </div>
          ` : ''}
          <div class="post-content">
            ${post.content}
          </div>
          ${post.image && post.imagePosition === 'below' ? `
            <div style="margin-top: 20px;">
              <img src="/uploads/${post.image}" alt="${post.title}" style="max-width: 100%; height: auto; border-radius: 6px; box-shadow: var(--shadow);">
            </div>
          ` : ''}
        </article>
      `).join('') + `
      <div style="text-align: center; margin-top: 30px;">
        <a href="/blogroll" class="btn">View All Posts</a>
      </div>
      ` : 
      '<p style="text-align: center; padding: 40px;">No posts yet. Check back soon!</p>'
    }
  `
}) %>
